#include <Servo.h>
int trig = 8;
int echo = 7;
long duration =0;
int distance=0;
Servo servo;
void setup(){
 servo.attach(6);
 pinMode(trig,OUTPUT);
 pinMode(echo,INPUT);
}
void loop(){
  int dis = 0;
  dis = calculateDistance();
  if(dis<30){
    servo.write(180);
  }
  else{
	servo.write(0);}}

int calculateDistance(){ 
  digitalWrite(trig, LOW); 
  delayMicroseconds(2);
  digitalWrite(trig, HIGH); 
  delayMicroseconds(10);
  digitalWrite(trig, LOW);
  duration = pulseIn(echo, HIGH); 
  distance= duration*0.034/2;
  return distance;
}
